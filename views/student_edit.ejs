<% include partials/header %>

<div class = "container">
	<div class="row">
<h1 style="text-align:center">Edit <%= student.name %></h1>
		<div atyle="width:30%;margin:30px auto">
			<form action="/students/<%= student._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= student.name %>" name="student[name]">
				</div>
				<div class ="form-group">
					<input class="form-control" type="text" value="<%= student.image%>" name = "student[image]">
				</div>
				<div class ="form-group">
					<input class="form-control" type="text" value = "<%= student.school %>" name = "student[school]">
				</div>
				<div class ="form-group">
					<input class="form-control" type="text" value = "<%= student.mobile %>" name = "student[mobile]">
				</div>
				<div class ="form-group">
					<input class="form-control" type="text" value = "<%= student.altnumber %>" name = "student[altnumber]">
				</div>
				<div class ="form-group">
					<input class="form-control" type="text" value="<%= student.description %>" name = "student[description]">
				</div>
				<div class = "form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
</div>
</div>
<% include partials/footer %>